<view class="container my-container" hidden="{{!loadingHidden}}">
    <view class="my-header">
        <image src="{{avatarUrl}}"></image>
        <text class="name">{{nickName}}</text>
    </view>
    <!--地址管理-->
    <view class="my-address">
        <view class="item-title item-title-border-top" bindtap="onMyOrderTap">
            我的订单
            <image src="../../images/icon/arrow@right.png"></image>
        </view>
        <view class="item-title" bindtap="onCollectionTap">
            我的收藏
            <image src="../../images/icon/arrow@right.png"></image>
        </view>
        <view class="item-title" bindtap="onQuestionTap">
            常见问题
            <image src="../../images/icon/arrow@right.png"></image>
        </view>
        <view class="item-title" bindtap="onAboutTap">
            关于我们
            <image src="../../images/icon/arrow@right.png"></image>
        </view>
        <view class="item-title" bindtap="onAgreementTap">
            用户协议
            <image src="../../images/icon/arrow@right.png"></image>
        </view>
    </view>
</view>
<loading hidden="{{loadingHidden}}">
    加载中...
</loading>