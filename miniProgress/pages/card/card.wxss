/* pages/card/card.wxss */

.container {
  background-color: #efefef;
  min-height: 100vh;
}

.tabs-box {
  padding: 0 30rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #efefef;
  background: #fff;
}

.tabs-item {
  flex: 1;
  color: #999;
  font-size: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 2px solid #fff;
}

.tabs-item.selected {
  color: #00b4d0;
  border-bottom: 2px solid #00b4d0;
  font-weight: bold;
}

.boxs {
  width: 100%;
}

.box {
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
}

.item {
  position: relative;
  width: 690rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
}

.item-img {
  position: absolute;
  top: 0;
  left: 30rpx;
  width: 690rpx;
  height: 240rpx;
}

.item-content {
  position: absolute;
  top: 0;
  left: 30rpx;
  width: 690rpx;
  height: 240rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.left {
  width: 194rpx;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #00b4d0;
  text-align: center;
}

.left text {
  font-family: PingFangSC-Medium;
  font-size: 40px;
  color: #00b4d0;
}

.right {
  margin-left: 30rpx;
  margin-right: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.top {
  font-family: PingFangSC-Regular;
  font-size: 18px;
  color: #00b4d0;
  text-align: left;
}

.bottom {
  margin-top: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #333;
}

.card-top {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 18px;
}

.card-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 6rpx;
  align-items: center;
}

.card-bottom .time {
  font-size: 12px;
}

.card-bottom .button {
  width: 100rpx;
  height: 28rpx;
  font-family: PingFangSC-Regular;
  font-size: 10px;
  color: #00b4d0;
  border: solid 1px #00b4d0;
  border-radius: 20rpx;
  line-height: 28rpx;
  padding: 6rpx;
}
