@import "../tpls/base.wxss";
@import "../tpls/list/orderList/orderList.wxss";
.my-container {
    background-color: #fff;
	border-top: solid 1px #f0f0f0;
}
.tap{
	display: flex;
	flex-direction: row;
	box-sizing: border-box;
	height: 80rpx;
	line-height: 80rpx;
	margin-bottom: 2px;
}
.tap-item{
	flex: 1;
	text-align: center;
	font-size: 14px;
	color: #999999;
	height: 80rpx;
	line-height: 80rpx;
}
.tap-wrap{
	display: inline-block;
	line-height: 80rpx;
	box-sizing: border-box;
	padding: 0 10rpx;
}
.active{
	font-weight: 500;
	color: #00b4d0;
	border-bottom: solid 2px #00b4d0;
}
.my-order {
    border-top: solid 1px #f0f0f0;
}
.item-main{
	background: #f0f0f0;
}
