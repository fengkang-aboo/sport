/* pages/kill/kill.wxss */
.container{
	background: #fff;
}
.kill{
	display: flex;
	flex-direction: column
}
.item{
	display: flex;
	flex-direction: column
}
.item-img{
	display: block;
	width: 100%;
	height: 360rpx;
}
.item-info{
	margin: 30rpx 0;
	display: flex;
	flex-direction: column;
	padding: 0 30rpx;
}
.item-name{
	font-size: 18px;
	color: #333333;
}
.item-club{
	margin-top: 10rpx;
	font-size: 14px;
	color: #666666;
}
.item-bottom{
	margin-top: 10rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}
.price{
	font-size: 14px;
	color: #00b4d0;
}
.price2{
  margin-left: 30rpx;
  font-size: 11px;
  color: #666;
  text-decoration: line-through
}
.time{
	font-size: 11px;
	color: #666666;
}
.none{
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;	
}
.none-bg{
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-image: linear-gradient(0deg, #00bed1 0%, #00d0b9 100%);
	opacity: 0.8;
	z-index: -1;
}
.none-info{
	position: absolute;
	left: 0;
	top: 50%;
	width: 100%;
	transform: translateY(-50%);
	text-align: center;
	color: #fff;
}
.none-title{
	font-family: PingFangSC-Semibold;
	font-size: 36px;
	color: #ffffff;
}
.none-time{
	margin-top: 30rpx;
	font-family: PingFangSC-Semibold;
	font-size: 18px;
	color: #ffffff;
}