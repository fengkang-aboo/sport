/* pages/share/share.wxss */

.container {
  width: 100%;
  height: 100%;
  background-image: linear-gradient(90deg, #00bed1 0%, #00d0b9 100%);
}

.boxs {
  margin: 50rpx;
  padding: 40rpx 0;
  height: 360rpx;
  background: rgba(255, 255, 255, 0.3);
}

.box {
  display: flex;
  flex-direction: column;
}

.item {
  position: relative;
  width: 590rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
}

.item-img {
  position: absolute;
  top: 0;
  left: 35rpx;
  width: 590rpx;
  height: 240rpx;
}

.item-content {
  position: absolute;
  top: 0;
  left: 30rpx;
  width: 590rpx;
  height: 240rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.left {
  width: 194rpx;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #00b4d0;
  text-align: center;
}

.left text {
  font-family: PingFangSC-Medium;
  font-size: 40px;
  color: #00b4d0;
}

.right {
  margin-left: 30rpx;
  margin-right: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.top {
  font-family: PingFangSC-Regular;
  font-size: 18px;
  color: #00b4d0;
  text-align: left;
}

.bottom {
  margin-top: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #333;
}

.late {
  width: 590rpx;
  height: 240rpx;
  margin-left: 30rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 8px;
}

.late .late-title {
  padding-top: 64rpx;
  font-size: 36rpx;
  color: #00b4d0;
}

.late .late-tip {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #333;
}

.use {
  text-align: center;
  color: #fff;
  position: absolute;
  left: 40rpx;
  top: 280rpx;
  width: 590rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #00b4d0;
  border-radius: 100px;
}

.list-content {
  margin: 60rpx;
  color: #fff;
}

.list-content .title {
  text-align: center;
  font-size: 18px;
  color: #fff;
  margin-bottom: 30rpx;
}

.list-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.list-item .item-avator {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.item-title {
  font-size: 28rpx;
  margin-left: 30rpx;
  text-align: left;
  flex: 1;
}

.item-title  view {
  margin-bottom: 10rpx;
}

.footer {
  margin: 60rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 50rpx;
}

.footer .title {
  font-size: 36rpx;
  line-height: 36rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
