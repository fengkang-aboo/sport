@import "../tpls/base.wxss";

.my-container {
    background-color: #ededed;
}

.my-header {
    width: 750rpx;
    height: 380rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.my-header image {
    height: 180rpx;
    width: 180rpx;
    border-radius: 100%;
    margin: 50rpx auto;
	border: solid 2px #00b4d0
}

.my-header text {
    text-align: center;
    font-size: 20px;
    font-weight: 500;
	color: #00b4d0
}

.my-address {
    padding: 0 40rpx;
    background-color: #fff;
}


.item-title {
    padding: 35rpx 0;
    text-align: left;
    border-bottom: 1rpx solid #ededed;
    font-size: 14px;
    background-color: #fff;
    position: relative;
}
.item-title-border-top{
	 border-top: 1rpx solid #ededed;
}

.item-title image {
    position: absolute;
    transform: rotate(270deg);
    height: 48rpx;
    width: 48rpx;
    right: 0rpx;
}





