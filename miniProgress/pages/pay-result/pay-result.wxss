.bg-img {
  position: relative;
  top: 0;
  left: 0;
}

.pay-result {
  position: absolute;
  width: 100%;
  top: 40rpx;
  margin: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  width: 126rpx;
  height: 126rpx;
  margin-bottom: 60rpx;
}

.pay-result button {
  margin: 60rpx 20rpx;
}

.pay {
  width: 360rpx;
  height: 100rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  border-radius: 100px;
  border: solid 1px #fff;
}

.share {
  width: 670rpx;
  height: 280rpx;
}
