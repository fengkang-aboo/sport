.detail_container {
    border-top: solid 1px #e6e6e6;
}

.detail_topic_img {
    width: 100%;
    height: 400rpx;
}

.detail_topic_img swiper {
    width: 100%;
    height: 400rpx;
}

.detail_topic_img swiper-item {
    width: 100%;
