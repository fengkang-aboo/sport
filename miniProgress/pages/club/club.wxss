/*商品详情*/

.tabs-box {
    margin: 0 30rpx;
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    border-bottom: 1px solid #efefef;
}

.tabs-item {
    flex: 1;
    color: #999;
    font-size: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 2px solid #fff;
}

.tabs-item.selected {
    color: #00b4d0;
    border-bottom: 2px solid #00b4d0;
    font-weight: bold;
}

.boxs {
    padding-top: 20rpx;
    background-color: white;
    height: auto;
}

.lesson {
    margin: 0 30rpx;
}

.lesson-tabs {
    display: flex;
    flex-direction: row;
}

.lesson-tab {
    flex: 1;
    height: 64rpx;
    line-height: 64rpx;
    color: #333;
    text-align: center;
    font-size: 14px;
}

.lesson-tab:first-of-type {
    /* background-image: linear-gradient(90deg, #00bed1 0%, #00d0b9 100%);
  border-radius: 16rpx; */
    width: 128rpx;
}

.on {
    background-image: linear-gradient(90deg, #00bed1 0%, #00d0b9 100%);
    border-radius: 32rpx;
    color: #fff;
}

.lesson-box {
    /* margin: 30rpx 30rpx 0; */
}

.lesson-item {
    padding: 30rpx 0;
    /* margin-bottom: 30rpx; */
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 0;
    border-bottom: solid 1px #efefef;
}

.item-img {
    width: 110rpx;
    height: 110rpx;
    overflow: hidden;
    display: inline-block;
    border-radius: 50%;
    margin-right: 30rpx;
}

.item-content {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.item-name {
    font-size: 16px;
    color: #333;
}

.item-teacher {
    font-size: 14px;
    color: #666;
    margin-top: 10rpx;
}

.item-desc {
    display: flex;
    flex-direction: row;
    align-items: bottom;
}

.item-time {
    font-size: 14px;
    color: #666;
}

.item-price {
    margin-left: 30rpx;
    font-size: 14px;
    color: #00b4d0;
}

.item-btn {
    width: 100rpx;
    height: 64rpx;
    background-image: linear-gradient(90deg, #00bed1 0%, #00d0b9 100%);
    border-radius: 32rpx;
    line-height: 64rpx;
    color: #fff;
    text-align: center;
    font-size: 14px;
    margin-left: 30rpx;
}

.club {
    color: #999;
    font-size: 14px;
    line-height: 30px;
}

.club-info {
    margin: 0rpx 30rpx;
    padding: 30rpx 0;
    border-bottom: solid 1px #efefef;
    overflow: hidden;
}

.club-info:first-of-type {
    padding-top: 0;
}

.club-info:last-of-type {
    border-bottom: none;
}

.club-map {
    margin-top: 20rpx;
    width: 100%;
    height: 280rpx;
}

.club-title {
    font-size: 18px;
    color: #333;
}

.club-desc {
    font-size: 14px;
    color: #666;
}

.club-time {
    display: flex;
    flex-direction: row;
    overflow: hidden;
    margin: 0rpx 30rpx;
    padding: 30rpx 0;
    border-bottom: solid 1px #efefef;
	justify-content: center;
	align-items: center; /*垂直居中*/
}
.club-wrap {
    flex: 1;
	display: flex;
	flex-direction: column;
}
.club-tel{
	width: 60rpx;
	height: 60rpx;
	font-size: 0;
	vertical-align: middle;
}